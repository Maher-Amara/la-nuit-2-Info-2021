{
  "name": "portfolio-boilerplate",
  "version": "1.0.0",
  "description": "Portfolio boilerplate with codeigniter4 and bootstrap5",
  "main": "index.js",
  "scripts": {
    "compile-scss": "sass src/scss:public/css",
    "purge-css": "purgecss --config ./purgecss.config.js",
    "minify-css": "cleancss --batch --batch-suffix '' public/css/*.css public/css/bootstrap/*.css",
    
    "image-min": "rm -r public/images/*;  imagemin src/images/* --out-dir=public/images",

    "minify-js": "",
    
    "build": "npm run compile-scss && npm run purge-css && npm run minify-css && npm run image-min"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Maher-Amara/portfolio-boilerplate.git"
  },
  "keywords": [
    "html5",
    "php7.3",
    "css3",
    "scss",
    "codeigniter4",
    "bootstrap5"
  ],
  "author": "maherDEV",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Maher-Amara/portfolio-boilerplate/issues"
  },
  "homepage": "https://github.com/Maher-Amara/portfolio-boilerplate#readme",
  "devDependencies": {
    "@babel/core": "^7.15.8",
    "@babel/preset-env": "^7.15.8",
    "@popperjs/core": "^2.10.2",
    "autoprefixer": "^10.3.7",
    "babel-loader": "^8.2.2",
    "clean-css-cli": "^5.4.1",
    "css-loader": "^6.4.0",
    "imagemin": "^8.0.1",
    "imagemin-cli": "^7.0.0",
    "imagemin-jpegtran": "^7.0.0",
    "imagemin-pngquant": "^9.0.2",
    "mini-css-extract-plugin": "^2.4.2",
    "postcss-cli": "^9.0.1",
    "postcss-loader": "^6.2.0",
    "postcss-preset-env": "^6.7.0",
    "purgecss": "^4.0.3",
    "sass": "^1.42.1",
    "sass-loader": "^12.2.0",
    "style-loader": "^3.3.0"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.15.4",
    "bootstrap": "^5.1.3",
    "brand-colors": "^2.1.1",
    "datatables": "^1.10.18",
    "jquery": "^3.6.0",
    "masonry-layout": "^4.2.2",
    "perfect-scrollbar": "^1.5.2"
  }
}
